/* USER CODE BEGIN 4 */
void CAN_Filter_Congif(void)
{





}

void CAN1_Tx(void)
{
    char msg[50];
    uint8_t our_message[5] = { 'H', 'E', 'L', 'L', 'O' };
    uint32_t TxMailbox;

    CAN_TxHeaderTypeDef TxHeader;
    TxHeader.DLC = 5;
    TxHeader.StdId = 0x65D;         // Standard ID
    TxHeader.IDE = CAN_ID_STD;      // Standard frame
    TxHeader.RTR = CAN_RTR_DATA;    // Data frame

    // Send CAN message
    if (HAL_CAN_AddTxMessage(&hcan1, &TxHeader, our_message, &TxMailbox) != HAL_OK)
    {
        Error_Handler(); // Transmission failed
    }

    // Wait for message to leave the mailbox
    while (HAL_CAN_IsTxMessagePending(&hcan1, TxMailbox));

    // Notify via UART
    sprintf(msg, "Message Transmitted\r\n");
    HAL_UART_Transmit(&huart2, (uint8_t*)msg, strlen(msg), HAL_MAX_DELAY);
}

void CAN1_Rx(void)
{
    CAN_RxHeaderTypeDef RxHeader;
    uint8_t rcvd_msg[9]; // Max CAN payload is 8 + 1 for '\0'
    char msg[64];

    // Wait for at least one message in FIFO0
    while (HAL_CAN_GetRxFifoFillLevel(&hcan1, CAN_RX_FIFO0) == 0);

    // Receive CAN message
    if (HAL_CAN_GetRxMessage(&hcan1, CAN_RX_FIFO0, &RxHeader, rcvd_msg) != HAL_OK)
    {
        Error_Handler(); // Reception failed
    }

    // Ensure it's a data frame with expected length (max 8)
    if (RxHeader.DLC <= 8)
    {
        rcvd_msg[RxHeader.DLC] = '\0'; // Null-terminate if it's string data

        // Format received message
        sprintf(msg, "Message Received : %s\r\n", rcvd_msg);
        HAL_UART_Transmit(&huart2, (uint8_t*)msg, strlen(msg), HAL_MAX_DELAY);
    }
    else
    {
        // Handle unexpected DLC
        sprintf(msg, "Invalid DLC: %lu\r\n", (unsigned long)RxHeader.DLC);
        HAL_UART_Transmit(&huart2, (uint8_t*)msg, strlen(msg), HAL_MAX_DELAY);
    }
}

